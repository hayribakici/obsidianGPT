{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "types": ["svelte", "node"],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2020"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.svelte",
    "**/*.ts",
    "node_modules"
  ],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
}